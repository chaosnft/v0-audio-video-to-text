// prisma/schema.prisma (dùng v5 style, thêm models từ working schema cho adapter)
generator client {
  provider = "prisma-client-js"  // v5 provider
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  image         String?
  subscription  String   @default("free")  // free, pro, etc.
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  accounts      Account[]  // Relation cho adapter (từ Google login)
  sessions      Session[]  // Relation cho session
  VerificationToken VerificationToken[]  // Relation cho verify (nếu cần)

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  user       User     @relation(fields: [identifier], references: [email], onDelete: Cascade)

  @@unique([identifier, token])
  @@map("verification_tokens")
}